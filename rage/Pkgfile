# Description: audio/video player
# URL: http://www.enlightenment.org/
# Maintainer: Wawrzek Niewodniczanski main at wawrzek dot name
# Depends on: elementary

name=rage
version=0.1.4
release=1
source=(http://download.enlightenment.org/rel/apps/$name/$name-$version.tar.gz)

build()
{
    cd $name-$version
    ./configure --prefix=/usr \
                --mandir=/usr/man \
		--disable-nls
    make
    make DESTDIR=$PKG install
}
