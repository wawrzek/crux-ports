# Description: Video and media object library for use with Enlighthement (DR19).
# URL: http://www.enlightenment.org/
# Maintainer: Wawrzek Niewodniczanski, main at wawrzek dot name
# Packager: Victor Martinez, pitillo at ono dot com
# Depends on: elf, vlc

name=emotion_generic_players
version=1.16.0
release=1
source=(http://download.enlightenment.org/rel/libs/$name/$name-$version.tar.gz)

build()
{
    cd $name-$version
    ./configure --prefix=/usr
    make
    make DESTDIR=$PKG install
}
