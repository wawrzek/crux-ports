# Description:	Postscript rendering library
# URL:		http://libspectre.freedesktop.org/
# Maintainer:	Alan Mizrahi, alan at mizrahi dot com dot ve
# Depends on:	ghostscript cairo

name=libspectre
version=0.2.7
release=2
source=(http://$name.freedesktop.org/releases/$name-$version.tar.gz
        libspectre-fix-gs-amalgamated-errors.patch)

build() {
	cd $name-$version
	patch -p1 -i $SRC/libspectre-fix-gs-amalgamated-errors.patch
	./configure \
		--prefix=/usr
	make
	make DESTDIR=$PKG install
}
