# Description: evas generic loaders (for DR19)
# URL: http://www.enlightenment.org/
# Maintainer: Wawrzek Niewodniczanski, main at wawrzek dot name
# Packager: Victor Martinez, pitillo at ono dot com
# Depends on: efl

name=evas_generic_loaders
version=1.16.0
release=1
source=(http://download.enlightenment.org/rel/libs/$name/$name-$version.tar.gz)

build()
{
    cd $name-$version
    ./configure --prefix=/usr
    make
    make -j1 DESTDIR=$PKG install
}
