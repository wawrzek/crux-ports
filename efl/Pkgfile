# Description: efl libraries
# URL: http://www.enlightenment.org/
# Maintainer: Wawrzek Niewodniczanski, main at wawrzek dot name
# Packager: Victor Martinez, pitillo at ono dot com
# Depends on: dbus xorg-libxp xorg-libxscrnsaver gstreamer gst-plugins-base giflib libtiff libsndfile pulseaudio harfbuzz fribidi poppler librsvg libraw libspectre luajit check openjpeg2

name=efl
version=1.28.1
release=1
source=(http://download.enlightenment.org/rel/libs/$name/$name-$version.tar.xz)

build()
{
	cd $name-$version
	meson --prefix=/usr \
		--mandir=/usr/man \
		-Dnls=false \
		-Dsystemd=false \
		-Dnetwork-backend=connman \
		-Decore-imf-loaders-disabler=ibus,scim \
		. build
	ninja -C build
	DESTDIR=$PKG ninja -C build install
}
