# Description: Enlightenment window manager.
# URL: http://www.enlightenment.org/
# Maintainer: Wawrzek Niewodniczanski, main at wawrzek dot name
# Packager: Victor Martinez, pitillo at ono dot com
# Depends on: efl xorg-xcb-util-keysyms

name=enlightenment
version=0.23.1
release=1
source=(http://download.enlightenment.org/rel/apps/enlightenment/enlightenment-$version.tar.xz)

build()
{
    cd $name-$version
    meson --prefix=/usr \
		      --mandir=/usr/man \
          -Dsystemd=false \
					-Dnls=false \
          -Dmount-udisks=false \
					. build
		ninja -C build
    DESTDIR=$PKG ninja -C build install
    rm -r $PKG/usr/share/enlightenment/{AUTHORS,COPYING,doc/}
}
